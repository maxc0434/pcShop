{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/categorie.css') }}">
{% endblock %}

{% block body %}
    <h1 class="text-center mt-5 mb-5 categTitle">Catégorie sélectionnée</h1>


<div class="container d-flex justify-content-center">
<div class="card divCardCateg" style="width: 40rem;">
  <img src="{{ categorie.photo }}" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title text-center fw-bold">{{ categorie.name }}</h5>
    <p class="card-text">{{ categorie.description }}</p>
    <a href="{{ path('app_article_filter', {'id': categorie.id}) }}" class="btn btn-outline-primary rounded-pill px-4 py-2 shadow-sm">Voir tous ces produits </a> 
  </div>
</div>
</div>

<div class="container d-flex justify-content-center mb-5 mt-2">
    <a class="btn btn-primary rounded-pill px-4 py-2 shadow-sm" href="{{ path('app_categorie_index') }}">Retour</a>

 {% if is_granted("ROLE_ADMIN") %}
    <a class="btn btn-info ms-2 me-2 rounded-pill px-4 py-2 shadow-sm" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">Modifier</a>

    {{ include('categorie/_delete_form.html.twig') }}
{% endif %}
</div>
{% endblock %}
