{% endblock %}


<nav class="navbar navbar-expand-lg bg-body-tertiary navbar-light bg-light ">
  <div class="container navContainer">
    <a class="navbar-brand fontTitleSite" href="{{ path('app_homepage') }}"> <img class="logoSite" src="https://st2.depositphotos.com/1007989/9405/i/450/depositphotos_94050838-stock-illustration-laptop-telling-joke.jpg" alt=""> PC Shop</a>
