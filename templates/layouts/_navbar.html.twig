                <li><a class="dropdown-item text-primary categoryTitle" href="{{ path('app_categorie_show', {'id':category.id}) }}">{{ category.name }}</a></li>

                <li><hr class="dropdown-divider"></li>
              {% endfor %}

        {% endif %}
            </ul>
          </li>

      <li class="nav-item">
        <a class="nav-link navbtn" href="{{ path('app_article_index') }}">Nos Articles</a> 
      </li>


         {% if app.user %}
            <li class="nav-item navbtn">
              <a href=" {{ path('app_logout')}}" class="nav-link "> Déconnexion </a>
